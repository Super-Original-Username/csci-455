<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NetworkActivity">

    <TextView
        android:id="@+id/ip_box"
        android:layout_width="307dp"
        android:layout_height="30dp"
        android:layout_marginTop="236dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/msg_box"
        android:layout_width="190dp"
        android:layout_height="29dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PI IP Address"
        app:layout_constraintBottom_toTopOf="@+id/ip_box"
        app:layout_constraintEnd_toEndOf="@+id/ip_box"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ip_box" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="134dp"
        android:layout_height="20dp"
        android:layout_marginTop="68dp"
        android:text="Incoming Message"
        app:layout_constraintEnd_toEndOf="@+id/msg_box"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/msg_box"
        app:layout_constraintTop_toBottomOf="@+id/ip_box" />
</androidx.constraintlayout.widget.ConstraintLayout>